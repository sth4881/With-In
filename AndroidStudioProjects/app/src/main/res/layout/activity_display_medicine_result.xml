<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DisplayMedicineResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--약 백과사전 검색 결과-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvSearchResultTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="약 백과사전 검색 결과\n"
                android:textSize="28sp"
                android:gravity="center"/>
        </LinearLayout>

        <!--약 백과사전을 통해서 검색된 약의 이미지 표시-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="100dp">
                <ImageView
                    android:id="@+id/ivMedicineImage"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tvMedicineNoImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="30dp"
                        android:textSize="20sp"
                        android:gravity="center" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>

        <!--약 백과사전을 통해서 검색된 약의 이름 표시-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvMedicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/tvMedicineCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!--약 백과사전을 통해서 검색된 약의 효과 표시-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvMedicineEffectTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="효능∙효과"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/tvMedicineEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="16sp" />
        </LinearLayout>

        <!--약 백과사전을 통해서 검색된 약의 사용법∙용량 표시-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvMedicineManualTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="사용법∙용량"
                android:textSize="20sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/tvMedicineManual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!--약 백과사전을 통해서 검색된 약의 주의사항 표시-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvMedicineWarningTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="주의사항"
                android:textSize="20sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/tvMedicineWarning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>

        <!--약 백과사전을 통해서 검색된 약의 부작용 표시-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvMedicineSideEffectTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="부작용"
                android:textSize="20sp"
                android:gravity="center" />
            <TextView
                android:id="@+id/tvMedicineSideEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>