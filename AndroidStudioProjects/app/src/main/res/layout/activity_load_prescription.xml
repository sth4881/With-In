<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoadPrescriptionActivity">

    <!--처방전 제목 표시-->
    <TextView
        android:id="@+id/tvPrescriptionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="24sp"/>

    <!--처방전 내용 표시-->
    <TextView
        android:id="@+id/tvPrescriptionContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp"/>

    <!--약 텍스트 표시-->
    <TextView
        android:id="@+id/tvPrescriptionMedicineTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="💊 처방 의약품 목록 💉"
        android:textSize="24sp"/>

    <!--약 목록 표시-->
    <TextView
        android:id="@+id/tvPrescriptionMedicineContents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="18sp" />

    <!--DUR 텍스트 표시-->
    <TextView
        android:id="@+id/tvDURText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="⚠ 의약품 안전성 정보(DUR) ⚠"
        android:textSize="24sp" />

    <!--DUR 내용(연령금기, 병용금기 임부금기) 표시-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--연령금기-->
        <TextView
            android:id="@+id/tvAgeProhibitionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="연령금기"
            android:textSize="18sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/tvAgeProhibitionContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_horizontal" />

        <!--병용금기-->
<!--        <TextView-->
<!--            android:id="@+id/tvCombiProhibitionTitle"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="연령금기"-->
<!--            android:textSize="18sp"-->
<!--            android:gravity="center" />-->
<!--        <TextView-->
<!--            android:id="@+id/tvCombiProhibitionContents"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="12sp"-->
<!--            android:gravity="center_horizontal" />-->

        <!--임부금기-->
        <TextView
            android:id="@+id/tvPregnantProhibitionTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="임부금기"
            android:textSize="18sp"
            android:gravity="center" />
        <TextView
            android:id="@+id/tvPregnantProhibitionContents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:gravity="center_horizontal" />
    </LinearLayout>

</LinearLayout>