<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchMedicineActivity">

    <TextView
        android:id="@+id/tvSearchMedicineTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:text="📖 약 백과사전 📖"
        android:textSize="24sp"
        android:gravity="center" />

    <EditText
        android:id="@+id/etMedicine"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvSearchMedicineTitle"
        android:layout_centerHorizontal="true"
        android:hint="제품코드 또는 의약품명을 입력해주세요"
        android:textSize="13sp"
        android:gravity="center"
        android:maxLength="12"/>

    <Button
        android:id="@+id/btnSearchMedicine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etMedicine"
        android:layout_centerHorizontal="true"
        android:text="검색"
        android:textSize="18sp"/>

</RelativeLayout>