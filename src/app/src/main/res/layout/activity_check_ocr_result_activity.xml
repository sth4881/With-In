<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CheckOCRResultActivity">

    <!--처방전 텍스트 표시-->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="처 방 전"
        android:textSize="30sp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"/>

    <!--방문한 병원 및 약국 설명 기록-->
    <TextView
        android:id="@+id/tvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitle"
        android:textSize="12sp"
        android:gravity="center"/>

    <!--처방받은 약 목록 표시-->
    <ListView
        android:id="@+id/lvInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInfo"
        android:textSize="12sp" />

    <!--DUR 텍스트 표시-->
    <TextView
        android:id="@+id/tvDUR"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lvInfo"
        android:text="⚠의약품 안전성 정보(DUR)⚠"
        android:textSize="18sp"
        android:gravity="center"/>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tvDUR">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--병용금기, 연령금기, 임부금기 약 표시-->
            <TextView
                android:id="@+id/combiTaboo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/ageTaboo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center_horizontal" />

            <TextView
                android:id="@+id/pregnantTaboo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:gravity="center_horizontal" />

        </LinearLayout>
    </ScrollView>
</RelativeLayout>